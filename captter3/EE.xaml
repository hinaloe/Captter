<Window x:Class="captter3.EE"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="EE" Height="300" Width="300" ResizeMode="NoResize" Loaded="Window_Loaded" Topmost="True">
    <Grid>
        <Image HorizontalAlignment="Center" Height="269" VerticalAlignment="Center" Width="292" Source="icon.png" MouseLeftButtonDown="Image_MouseLeftButtonDown">
            <Image.LayoutTransform>
                <TransformGroup>
                    <ScaleTransform x:Name="st" ScaleX="0.5" ScaleY="0.5"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Image.LayoutTransform>
            <Image.OpacityMask>
                <ImageBrush ImageSource="icon.png" Stretch="None"/>
            </Image.OpacityMask>
        </Image>
        <TextBlock x:Name="ver" Margin="69,239,70,0" TextWrapping="Wrap" Text="上の絵をクリック！" VerticalAlignment="Top" FontSize="16"/>

    </Grid>
</Window>
